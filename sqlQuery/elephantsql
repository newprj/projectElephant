SELECT  'DROP TABLE ' || object_name || ' CASCADE CONSTRAINTS;'
  FROM    user_objects
WHERE   object_type = 'TABLE';

-- spring database���� ��� table�� ���� �߽��ϴ�
drop table tbl_user;


create table tbl_user(
    uno number,
    user_id varchar2(30),
    password varchar2(30),
    name varchar2(30),
    email varchar2(30));
    
alter table tbl_user add reg_date Date; ---12/27 희주 추가

create sequence seq_uno;
drop sequence seq_uno;

drop table tbl_group;
create table tbl_group(
    gno number,
    group_name varchar2(100),
    leader varchar2(30),
    subject varchar2(30),
    description varchar2(500),
    member_number number);
delete from tbl_group;
select * from tbl_group;
create sequence seq_gno;
drop sequence seq_gno;
drop table tbl_groupuser;
create table tbl_groupuser(
    cno number,
    authorized varchar2(1) default 'N',
    user_id varchar2(30),
    group_name varchar2(30));

select * from tbl_groupuser;
create sequence seq_cno;
drop sequence seq_cno;
create table tbl_review(
    rno number,
    group_name varchar2(30),
    title varchar2(200),
    content varchar2(2000),
    writer varchar2(30),
    regdate date default sysdate );    

create sequence seq_rno;

drop sequence seq_rno;
create table tbl_qanda(
    qno number,
    title varchar2(200),
    content varchar2(2000),
    writer varchar2(30),
    regdate date default sysdate );    
    
create sequence seq_qno;
drop sequence seq_qno;    
create table tbl_board(
    bno number,
    group_name varchar2(30),
    title varchar2(200),
    content varchar2(2000),
    writer varchar2(30),
    regdate date default sysdate );  

create sequence seq_bno;
drop sequence seq_bno;    
commit;

select * from tbl_user;
select * from tbl_group;


select * from tbl_board;
    
